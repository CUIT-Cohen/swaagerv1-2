<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bysj.dao.ResourceDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bysj.entity.Resource">
        <id column="id" property="id"/>
        <result column="file_url" property="fileUrl"/>
        <result column="file_size" property="fileSize"/>
        <result column="file_name" property="fileName"/>
        <result column="need_money" property="needMoney"/>
        <result column="desc" property="desc"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modify" property="gmtModify"/>
        <result column="user_create" property="userCreate"/>
        <result column="user_modify" property="userModify"/>
        <result column="state" property="state"/>
    </resultMap>
<!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, file_url AS fileUrl, file_size AS fileSize, file_name AS fileName, need_money AS needMoney, desc, gmt_create AS gmtCreate, gmt_modify AS gmtModify, user_create AS userCreate, user_modify AS userModify, state
    </sql>

    <sql id="Table_Name">
        resource
    </sql>


    <sql id="IF_Base_Column_List">
        <if test=" fileUrl != null">
            file_url,
        </if>
        <if test=" fileSize != null">
            file_size,
        </if>
        <if test=" fileName != null">
            file_name,
        </if>
        <if test=" needMoney != null">
            need_money,
        </if>
        <if test=" desc != null">
            desc,
        </if>
        <if test=" gmtCreate != null">
            gmt_create,
        </if>
        <if test=" gmtModify != null">
            gmt_modify,
        </if>
        <if test=" userCreate != null">
            user_create,
        </if>
        <if test=" userModify != null">
            user_modify,
        </if>
        <if test=" state != null">
            state,
        </if>
    </sql>

    <sql id="IF_Value_Column_List">
        <if test=" fileUrl != null">
            #{fileUrl },
        </if>
        <if test=" fileSize != null">
            #{fileSize },
        </if>
        <if test=" fileName != null">
            #{fileName },
        </if>
        <if test=" needMoney != null">
            #{needMoney },
        </if>
        <if test=" desc != null">
            #{desc },
        </if>
        <if test=" gmtCreate != null">
            #{gmtCreate },
        </if>
        <if test=" gmtModify != null">
            #{gmtModify },
        </if>
        <if test=" userCreate != null">
            #{userCreate },
        </if>
        <if test=" userModify != null">
            #{userModify },
        </if>
        <if test=" state != null">
            #{state },
        </if>
    </sql>

    <sql id="Set_Column_List">
        <if test=" fileUrl != null">
            file_url = #{fileUrl },
        </if>
        <if test=" fileSize != null">
            file_size = #{fileSize },
        </if>
        <if test=" fileName != null">
            file_name = #{fileName },
        </if>
        <if test=" needMoney != null">
            need_money = #{needMoney },
        </if>
        <if test=" desc != null">
            desc = #{desc },
        </if>
        <if test=" gmtCreate != null">
            gmt_create = #{gmtCreate },
        </if>
        <if test=" gmtModify != null">
            gmt_modify = #{gmtModify },
        </if>
        <if test=" userCreate != null">
            user_create = #{userCreate },
        </if>
        <if test=" userModify != null">
            user_modify = #{userModify },
        </if>
        <if test=" state != null">
            state = #{state },
        </if>
    </sql>

    <sql id="Where_Column_List">
        <if test=" fileUrl != null">
            and file_url = #{fileUrl }
        </if>
        <if test=" fileSize != null">
            and file_size = #{fileSize }
        </if>
        <if test=" fileName != null">
            and file_name = #{fileName }
        </if>
        <if test=" needMoney != null">
            and need_money = #{needMoney }
        </if>
        <if test=" desc != null">
            and desc = #{desc }
        </if>
        <if test=" gmtCreate != null">
            and gmt_create = #{gmtCreate }
        </if>
        <if test=" gmtModify != null">
            and gmt_modify = #{gmtModify }
        </if>
        <if test=" userCreate != null">
            and user_create = #{userCreate }
        </if>
        <if test=" userModify != null">
            and user_modify = #{userModify }
        </if>
        <if test=" state != null">
            and state = #{state }
        </if>
    </sql>

    <insert id="insert" parameterType="com.bysj.entity.Resource">
        insert into
        <include refid="Table_Name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="IF_Base_Column_List"></include>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="IF_Value_Column_List"></include>
        </trim>
    </insert>

    <update id="update" parameterType="com.bysj.entity.Resource">
        update
        <include refid="Table_Name"></include>
        <trim prefix="SET" suffixOverrides=",">
            <include refid="Set_Column_List"></include>
        </trim>
        where id = #{id}
    </update>

    <!-- 根据主键查询 -->
    <select id="getById" resultType="com.bysj.entity.Resource" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        where id = #{id}
    </select>


    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from
        <include refid="Table_Name"></include>
        where id = #{id}
    </delete>

    <select id="getByWhere" resultType="com.bysj.entity.Resource" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
    </select>


    <select id="getAll" resultType="com.bysj.entity.Resource">
        select *
        from
        <include refid="Table_Name"></include>
    </select>


    <select id="findCount" resultType="int" parameterType="com.bysj.common.request.ObjectQuery">
        select count(1)
        from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
    </select>

    <select id="findQuery" resultType="com.bysj.entity.Resource" parameterType="com.bysj.common.request.ObjectQuery">
        select * from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
        <if test="pageSize !=-1">
            LIMIT #{pageSize} offset #{pageOffset}
        </if>
    </select>
</mapper>