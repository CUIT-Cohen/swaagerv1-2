    <select id="findQuery" resultType="com.bysj.entity.Post" parameterType="com.bysj.common.request.ObjectQuery">
        select
          p.id,
          p.title,
          p.info,
          u.nickname as posterName,
          p.if_good as ifGood,
          pl.plate_name as plateName,
          p.reply_count as replyCount,
          p.thumbup_count as thumbupCount,
          p.gmt_create as gmtCreate,
          p.gmt_modify as gmtModify,
          p.read_count as readCount,
          p.article_from as articleFrom,
          p.article_type as articleType
        from
         post p
        inner join
          user u
        inner join
          plater pl
        <where>
            <trim prefixOverrides="and">
                <if test=" title != null">
                    and title = #{title }
                </if>
                <if test=" info != null">
                    and info = #{info }
                </if>
                <if test=" ifGood != null">
                    and if_good = #{ifGood }
                </if>
                <if test=" plateId != null">
                    and plate_id = #{plateId }
                </if>
                <if test=" gmtCreate != null">
                    and gmt_create = #{gmtCreate }
                </if>
                <if test=" articleFrom != null">
                    and article_from = #{articleFrom }
                </if>
                <if test=" articleType != null">
                    and article_type = #{articleType }
                </if>
                and p.state = 1
                and p.plate_id = pl.id
                and p.create_user = u.id
            </trim>
        </where>
        <if test="pageSize !=-1">
            LIMIT #{pageSize} offset #{pageOffset}
        </if>
    </select>
    <select id="findPageSimplePost" resultType="com.bysj.entity.vo.response.PostResponse" parameterType="com.bysj.entity.vo.query.PostSimpleQueryList">
        select
          p.id,
          p.title,
          p.info,
          u.nickname as posterName,
          p.if_good as ifGood,
          pl.plate_name as plateName,
          p.reply_count as replyCount,
          p.thumbup_count as thumbupCount,
          p.gmt_create as gmtCreate,
          p.gmt_modify as gmtModify,
          p.read_count as readCount,
          p.article_from as articleFrom,
          p.article_type as articleType
        from
         post p
        inner join user u
        inner join plater pl
        where
          p.plate_id = pl.id
        and p.create_user = u.id
        and p.state = 1
        <if test="integratedQuery != null">
          and (
            p.title like CONCAT('%', #{integratedQuery}, '%'}
            or p.info like CONCAT('%', #{integratedQuery}, '%'}
          )
        </if>
    </select>
