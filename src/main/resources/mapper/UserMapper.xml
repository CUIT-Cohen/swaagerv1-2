<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bysj.dao.UserDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bysj.entity.User">
        <id column="id" property="id"/>
        <result column="nickname" property="nickname"/>
        <result column="psw" property="psw"/>
        <result column="money" property="money"/>
        <result column="if_ban" property="ifBan"/>
        <result column="email" property="email"/>
        <result column="picture" property="picture"/>
        <result column="level" property="level"/>
    </resultMap>
<!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, nickname, psw, money, if_ban AS ifBan, email, picture, level
    </sql>

    <sql id="Table_Name">
        user
    </sql>


    <sql id="IF_Base_Column_List">
        <if test=" nickname != null">
            nickname,
        </if>
        <if test=" psw != null">
            psw,
        </if>
        <if test=" money != null">
            money,
        </if>
        <if test=" ifBan != null">
            if_ban,
        </if>
        <if test=" email != null">
            email,
        </if>
        <if test=" picture != null">
            picture,
        </if>
        <if test=" level != null">
            level,
        </if>
    </sql>

    <sql id="IF_Value_Column_List">
        <if test=" nickname != null">
            #{nickname },
        </if>
        <if test=" psw != null">
            #{psw },
        </if>
        <if test=" money != null">
            #{money },
        </if>
        <if test=" ifBan != null">
            #{ifBan },
        </if>
        <if test=" email != null">
            #{email },
        </if>
        <if test=" picture != null">
            #{picture },
        </if>
        <if test=" level != null">
            #{level },
        </if>
    </sql>

    <sql id="Set_Column_List">
        <if test=" nickname != null">
            nickname = #{nickname },
        </if>
        <if test=" psw != null">
            psw = #{psw },
        </if>
        <if test=" money != null">
            money = #{money },
        </if>
        <if test=" ifBan != null">
            if_ban = #{ifBan },
        </if>
        <if test=" email != null">
            email = #{email },
        </if>
        <if test=" picture != null">
            picture = #{picture },
        </if>
        <if test=" level != null">
            level = #{level },
        </if>
    </sql>

    <sql id="Where_Column_List">
        <if test=" nickname != null">
            and nickname = #{nickname }
        </if>
        <if test=" psw != null">
            and psw = #{psw }
        </if>
        <if test=" money != null">
            and money = #{money }
        </if>
        <if test=" ifBan != null">
            and if_ban = #{ifBan }
        </if>
        <if test=" email != null">
            and email = #{email }
        </if>
        <if test=" picture != null">
            and picture = #{picture }
        </if>
        <if test=" level != null">
            and level = #{level }
        </if>
    </sql>

    <insert id="insert" parameterType="com.bysj.entity.User">
        insert into
        <include refid="Table_Name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="IF_Base_Column_List"></include>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="IF_Value_Column_List"></include>
        </trim>
    </insert>

    <update id="update" parameterType="com.bysj.entity.User">
        update
        <include refid="Table_Name"></include>
        <trim prefix="SET" suffixOverrides=",">
            <include refid="Set_Column_List"></include>
        </trim>
        where id = #{id}
    </update>

    <!-- 根据主键查询 -->
    <select id="getById" resultType="com.bysj.entity.User" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        where id = #{id}
    </select>


    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from
        <include refid="Table_Name"></include>
        where id = #{id}
    </delete>

    <select id="getByWhere" resultType="com.bysj.entity.User" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
    </select>


    <select id="getAll" resultType="com.bysj.entity.User">
        select *
        from
        <include refid="Table_Name"></include>
    </select>


    <select id="findCount" resultType="int" parameterType="com.bysj.common.ObjectQuery">
        select count(1)
        from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
    </select>

    <select id="findQuery" resultType="com.bysj.entity.User" parameterType="com.bysj.common.ObjectQuery">
        select * from
        <include refid="Table_Name"></include>
        <where>
            <trim prefixOverrides="and">
                <include refid="Where_Column_List"></include>
            </trim>
        </where>
        <if test="pageSize !=-1">
            LIMIT #{pageSize} offset #{pageOffset}
        </if>
    </select>
</mapper>